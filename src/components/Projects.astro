---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Docker from "./icons/Docker.astro";
import Typescript from "./icons/Typescript.astro";
import Net from "./icons/Net.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  DOCKER: {
    name: "Docker",
    class: "bg-[#003159] text-white",
    icon: Docker,
  },
  TYPESCRIPT: {
    name: "Typescript",
    class: "bg-[#3178c6] text-white",
    icon: Typescript,
  },
  NET: {
    name: ".NET",
    class: "bg-[#512BD4] text-white",
    icon: Net,
  },
};

const PROJECTS = [
  {
    title: t("projects[3].title"),
    description: t("projects[3].description"),
    image: t("projects[3].image"),
    imgAlt: t("projects[3].imgAlt"),
    tags: [TAGS.TYPESCRIPT, TAGS.NET],
  },
  {
    title: t("projects[0].title"),
    description: t("projects[0].description"),
    link: t("projects[0].link"),
    image: t("projects[0].image"),
    imgAlt: t("projects[0].imgAlt"),
    github: "https://github.com/AguirreEze/reventando_otros_mundos",
    tags: [TAGS.NEXT, TAGS.TYPESCRIPT],
  },
  {
    title: t("projects[1].title"),
    description: t("projects[1].description"),
    link: t("projects[1].link"),
    image: t("projects[1].image"),
    imgAlt: t("projects[1].imgAlt"),
    tags: [TAGS.NEXT],
  },
  {
    title: t("projects[2].title"),
    description: t("projects[2].description"),
    link: t("projects[2].link"),
    image: t("projects[2].image"),
    imgAlt: t("projects[2].imgAlt"),
    tags: [TAGS.NEXT, TAGS.DOCKER],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(
      ({ image, title, description, tags, link, github, imgAlt }) => (
        <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
          <div class="w-full md:w-1/2">
            <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
              <img
                alt={imgAlt}
                class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                loading="lazy"
                src={image}
              />
            </div>
          </div>

          <div class="w-full md:w-1/2 md:max-w-lg">
            <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
              {title}
            </h3>
            <div class="flex flex-wrap mt-2">
              <ul class="flex flex-row mb-2 gap-x-2">
                {tags.map((tag) => (
                  <li>
                    <span
                      class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                    >
                      <tag.icon class="size-4" />
                      {tag.name}
                    </span>
                  </li>
                ))}
              </ul>

              <div class="mt-2 text-gray-700 dark:text-gray-400">
                {description}
              </div>
              <footer class="flex items-end justify-start mt-4 gap-x-4">
                {github && (
                  <LinkButton href={github}>
                    <GitHub class="size-6" />
                    {t("project.code")}
                  </LinkButton>
                )}
                {link && (
                  <LinkButton href={link}>
                    <Link class="size-4" />
                    {t("project.production")}
                  </LinkButton>
                )}
              </footer>
            </div>
          </div>
        </article>
      )
    )
  }
</div>
